{
  "name": "storybook-typescript-react-library",
  "version": "1.2.0",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "files": [
    "build/lib"
  ],
  "scripts": {
    "start": "start-storybook",
    "build": "npm run lint && npm run build-lib && build-storybook",
    "build-lib-watch": "tsc -w",
    "build-lib": "tsc && npm run copy-css-to-lib && npm run copy-svg-to-lib && npm run copy-png-to-lib && npm run copy-woff2-to-lib",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:update": "npm test -- --u --coverage",
    "build-storybook": "-c .storybook -o .out",
    "copy-css-to-lib": "cpx \"./src/**/*.css\" ./build/lib",
    "copy-woff2-to-lib": "cpx \"./src/**/*.woff2\" ./build/lib",
    "copy-svg-to-lib": "cpx \"./src/**/*.svg\" ./build/lib",
    "copy-png-to-lib": "cpx \"./src/**/*.png\" ./build/lib",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@storybook/addon-actions": "^5.3.2",
    "@storybook/addon-info": "^5.3.2",
    "@storybook/addon-knobs": "^5.3.2",
    "@storybook/addon-links": "^5.3.2",
    "@storybook/addon-options": "^5.3.2",
    "@storybook/react": "^5.3.2",
    "react": "^16.12.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^11.15.4",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-test-renderer": "^16.9.1",
    "@types/storybook__react": "4.0.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "cpx": "^1.5.0",
    "jest": "^24.9.0",
    "npm": "^6.13.6",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "tachyons": "^4.11.1",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
